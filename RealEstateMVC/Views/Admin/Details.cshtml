@model RealEstateMVC.Models.HouseViewModel

@{
    Layout = "~/Views/Shared/_LayoutHouse.cshtml";
    ViewData["Title"] = "Details";
}

@section admin
{
    <br />
    <div class="row">
        <div class="col-3">
            <form asp-controller="Admin" asp-action="Edit" asp-route-id="@Model.house.Id" method="get">
                <input type="submit" value="Update" />
            </form>
        </div>
        <div class="col-3">
            <form asp-controller="Admin" asp-action="Delete" asp-route-id="@Model.house.Id">
                <input type="submit" value="Delete" />
            </form>
        </div>
    </div>
}
