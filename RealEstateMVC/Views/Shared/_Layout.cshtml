<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RealEstateMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
</head>
<body>
    <header>
    <!--nav bar-->
        <nav>
            <div class="container">
                <ul style="list-style-type: none;">
                    <li style="display:inline-block;" class="col-2"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li style="display:inline-block;" class="col-2"><a asp-controller="Admin" asp-action="Index">Admin</a></li>
                    <li style="display:inline-block;" class="col-2"><a asp-controller="Schedule" asp-action="Index">Schedule</a></li>
                </ul>
            </div>
        </nav>
    <!--banner-->
        <a href="@Url.Action("Index", "Home")">
            <img src="@Url.Content("~/Images/real-estate-banner-1.jpg")" style="width: 100%"/>
        </a>
    </header>
    <!--main content-->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!--footer-->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - RealEstateMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
